@model SGPI.Models.TblUsuario
@{
    ViewData["Title"] = "CrearUsuario";
    Layout = "_LayoutSGPI";
}

<div class="container">
    <br>
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark justify-content-center">
        <b>
            <ul class="navbar-nav navbar-center">
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/CrearUsuario">CREAR USUARIO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/BuscarUsuario">BUSCAR USUARIO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/EliminarUsuario">ELIMINAR USUARIO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/ModificarUsuario">MODIFICAR USUARIO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/Reportes">REPORTES</a>
                </li>
            </ul>
        </b>
    </nav>
    <br>
    <div style="text-align:right">
        <a href="/Administrador/Login" id="regresar">Cerrar sesion</a>
    </div>
    <div class="tab-content">
        <form method="post">
            <br>
            <div class="container tab-pane active">
                <fm action="/action_page.php">
                    <div class="container-fluid cew-9">
                        <div class="row">
                            <div class="col">
                                <b><label for="tipo">Tipo de Documento</label></b>
                                <br>
                                @Html.DropDownList("Iddoc", new SelectList(ViewBag.TblTipoDocumento, "Iddoc","TipoDocumento"), new{@class="form-control dropdown"})
                                <br>
                                <br>
                                <br>
                                <b><label for="programa">Programa</label></b>
                                <br>
                                @Html.DropDownList("Idprograma", new SelectList(ViewBag.TblPrograma, "Idprograma","Programa"), new{@class="form-control dropdown"})
                                <br>
                            </div>
                            <div class="col">
                                <b><label for="rol">Rol</label></b>
                                <br>
                                @Html.DropDownList("IdRol", new SelectList(ViewBag.tblRol, "Idrol","Rol"), new{@class="form-control dropdown"})
                                <br>
                                <br>
                                <br>
                                <b><label for="genero">Genero</label></b>
                                <br>
                                @Html.DropDownList("Idgenero", new SelectList(ViewBag.tblGenero, "Idgenero","Genero"), new{@class="form-control dropdown"})
                                <br>
                                <br>
                                <br>
                               
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.mensaje != null)
                    {
                            <div class="alert alert-success" role="alert">
                            @ViewBag.mensaje
                            </div>
                    }
                    <div class="row">
                        <div class="col">
                            <b><label for="numdoctxt">NUMERO DE DOCUMENTO</label></b><br>
                            <input asp-for="NumeroDocumento" type="number" placeholder="#" style="width : 350px; heigth : 5px" id="numdoctxt" required />
                            <br>
                            <br>
                            <b><label for="numdoctxt">CORREO</label></b><br>
                            <input asp-for="Email" type="email" placeholder="Ingrese correo" style="width : 350px; heigth : 5px" id="correoelectxt" required />
                            <br>
                            <br>
                            <b><label for="primernametxt">PRIMER NOMBRE</label></b><br>
                            <input asp-for="PrimerNombre" type="text" placeholder="Ingrese primer nombre" style="width : 350px; heigth : 5px" id="primernombtxt" required />
                            <br>
                            <br>
                        </div>
                        <div class="col">
                            <b><label for="segundonamectxt">SEGUNDO NOMBRE</label></b><br>
                            <input asp-for="SegundoNombre" type="text" placeholder="Ingrese segundo nombre" style="width : 350px; heigth : 5px" id="segundonamectxt" required />
                            <br>
                            <br>
                            <b><label for="primerlastnametxt">PRIMER APELLIDO</label></b><br>
                            <input asp-for="PrimerApellido" type="text" placeholder="Ingrese primer apellido" style="width : 350px; heigth : 5px" id="primerlastnametxt" required />
                            <br>
                            <br>
                            <b><label for="segundolastnametxt">SEGUNDO APELLIDO</label></b><br>
                            <input asp-for="SegundoApellido" type="text" placeholder="Ingrese segundo apellido" style="width : 350px; heigth : 5px" id="segundolastnametxt" required />
                            <br>
                            <br>
                        </div>
                    </div>
                    <br>
                    <br>
                    <center>
                        <b><label for="contraseñatxt">CONTRASEÑA</label></b>
                        <br>
                        <input asp-for="VcPassword" placeholder="Ingrese la nueva contraseña" type="password" style="width : 350px;" id="contraseñatxt" required />
                    </center>
                    <br>
                    <br>
                    <center><button class="btn btn-outline-primary" id="crearusuariobtn" type="submit" value="Ingresar">CREAR USUARIO</button></center>
            </div>
        </form>
    </div>
</div>